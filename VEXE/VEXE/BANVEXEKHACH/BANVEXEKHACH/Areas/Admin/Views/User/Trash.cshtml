@model IEnumerable<VEXE.Models.user>

@{
    ViewBag.Title = "Thùng Rác";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-title bg-white p-3">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h3 class="text-orange font-weight-bold">Thùng Rác | Tài Khoản</h3>
        </div>
        <div class="col-md-6">
            <ol class="breadcrumb bg-white float-sm-right">
                <li class="breadcrumb-item"><a href="~/Admin" class="text-orange">Trang Chủ</a></li>
                <li class="breadcrumb-item active">Thùng Rác</li>
            </ol>
        </div>
    </div>
</div>

<section class="mt-3">
    <div class="card bg-light p-4">
        <div class="row justify-content-end">
            <div class="col-md-3 text-right">
                <a class="btn btn-sm btn-orange-light text-white" href="~/Admin/User">
                    <i class="fas fa-arrow-left"></i> Quay Lại
                </a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12">
                <table class="table table-striped table-bordered dt-responsive nowrap">
                    <thead class="bg-orange text-white">
                        <tr>
                            <th style="text-align:center">ID</th>
                            <th style="text-align:center">Tài Khoản</th>
                            <th style="text-align:center">Email</th>
                            <th style="text-align:center">Ngày Tạo</th>
                            <th style="text-align:center">Chức Năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center text-orange">@Html.DisplayFor(modelItem => item.ID)</td>
                                <td style="text-align:center">
                                    <a class="text-orange font-weight-bold" href="#">
                                        @Html.DisplayFor(modelItem => item.fullname)
                                    </a>
                                </td>
                                <td style="text-align:center">@Html.DisplayFor(modelItem => item.email)</td>
                                <td style="text-align:center">@item.created_at.ToString("dd/MM/yyyy hh:mm tt")</td>
                                <td style="text-align:center">
                                    <a class="btn btn-sm btn-success" href="@Url.Action("Retrash", "user", new { id = item.ID })">
                                        <i class="fas fa-undo"></i>
                                    </a>
                                    <a class="btn btn-sm btn-danger" href="@Url.Action("deleteTrash", "user", new { id = item.ID })">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<script>
    $("#user").addClass("active");
</script>

<style>
    /* Chủ đề màu cam */
    .text-orange {
        color: #FF6600;
    }

    .btn-orange-light {
        background-color: #FFA366;
        border: none;
    }

    .bg-orange {
        background-color: #FF6600;
    }

    /* Tùy chỉnh bảng */
    table th {
        text-align: center;
    }

    table tbody tr:hover {
        background-color: #fdf2e9;
    }

    /* Nút hành động */
    .btn {
        border-radius: 5px;
        font-size: 14px;
    }

        .btn:hover {
            opacity: 0.9;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    /* Card */
    .card {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Breadcrumb */
    .breadcrumb a {
        text-decoration: none;
    }

        .breadcrumb a:hover {
            text-decoration: underline;
        }
</style>
