@model IEnumerable<VEXE.Models.ticket>

@{
    ViewBag.Title = "Thùng Rác";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}

<div class="card card-title bg-white p-2">
    <div class="row">
        <div class="col-md-6">
            <h3 class="pl-2 mt-2">Thùng rác | Trang quản lí vé</h3>
        </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item"><a href="/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item">Thùng rác</li>
            </ol>
        </div>
    </div>
</div>

<section>
    <div class="bg-white card p-3">
        <div class="row justify-content-end mb-3">
            <div class="col-md-3 text-right">
                <a class="btn btn-sm btn-danger text-white" href="~/admin/Tickets">Hủy | Quay về trang quản lí vé</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-3">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead class="thead-light">
                        <tr>
                            <th style="text-align:center">Hình ảnh (nếu có)</th>
                            <th style="text-align:center">Điểm đi</th>
                            <th style="text-align:center">Điểm đến</th>
                            <th style="text-align:center">Ngày đi</th>
                            <th style="text-align:center">Giá vé</th>
                            <th style="text-align:center">Chức năng</th>
                            <th style="text-align:center">Mã vé</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center"><img style="width:50px;" src="~/public/images/flight/@Html.DisplayFor(modelItem => item.airline)" alt="hình ảnh"></td>
                                <td style="text-align:center">@item.city.cityName</td>
                                <td style="text-align:center">@item.city1.cityName</td>
                                <td style="font-size:14px;">@item.departure_date.Value.ToString("dd/MM/yyyy")</td>
                                <td style="font-size:14px;">@item.price.Value.ToString("N0") VND</td>
                                <td style="text-align:center">
                                    <a class="btn btn-sm btn-light text-dark border" name="btnRetrash" href="@Url.Action("Retrash", "Tickets", new { id = item.id })">
                                        <i class="fas fa-undo"></i>
                                    </a>
                                    <a class="btn btn-sm btn-light text-danger border" name="btnDeleteTrash" href="@Url.Action("deleteTrash", "Tickets", new { id = item.id })">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td class="text-muted">@Html.DisplayFor(modelItem => item.id)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<style>
    .btn-orange {
        background-color: #FF6600;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-orange-light {
        background-color: #FFA366;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-orange-danger {
        background-color: #FF3300;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-gray {
        background-color: #cccccc;
        border: none;
        color: #555;
        padding: 0.5rem 1.2rem;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .btn:hover {
        opacity: 0.85;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .breadcrumb a {
        color: #FF6600;
        text-decoration: none;
    }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

    table {
        font-size: 14px;
        margin-top: 1rem;
    }

        table th {
            background-color: #FF6600;
            color: #fff;
            font-weight: bold;
        }

        table td {
            vertical-align: middle;
        }

        table tbody tr:hover {
            background-color: #f5f5f5;
        }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #FF6600;
    }

    .fas {
        font-size: 16px;
    }
</style>