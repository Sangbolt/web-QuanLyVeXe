@model VEXE.Models.ticket

@{
    ViewBag.Title = "Thêm Vé XE";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}

<div class="card card-title bg-white p-2">
    <div class="row">
        <div class="col-md-6">
            <h3 class="pl-2 mt-2">Thêm vé xe mới</h3>
        </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item"><a href="/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item">Thêm vé xe mới</li>
            </ol>
        </div>
    </div>
</div>

<section class="card card-title bg-white p-2">
    @Html.Partial("_MessgeAlert")
    <div class="container bg-white pt-4" style="margin-bottom:30px">
        @using (Html.BeginForm("Create", "Tickets", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-12 text-center mb-4">
                    <h2 class="font-weight-bold text-success">Admin - Thêm vé xe mới</h2>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="name" class="text-secondary font-weight-bold">Tên Tuyến (Tên vé xe)</label>
                        <input type="text" name="name" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="description" class="text-secondary font-weight-bold">Nội Dung Mô Tả</label>
                        <input type="text" name="description" class="form-control" required />
                    </div>
                </div>

                <div class="col-md-6" style="margin-bottom: -300px">
                    <div class="form-group">
                        <label for="fromAirport" class="text-secondary font-weight-bold">Điểm đi</label>
                        <select name="fromAirport" class="selectpicker form-control" required>
                            @foreach (var item in ViewBag.cities)
                            {
                                <option value="@item.cityId">@item.cityName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="toAirport" class="text-secondary font-weight-bold">Đến đến</label>
                        <select name="toAirport" class="selectpicker form-control" required>
                            @foreach (var item in ViewBag.cities)
                            {
                                <option value="@item.cityId">@item.cityName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="flightCode" class="text-secondary font-weight-bold">Mã tuyến</label>
                        <input type="text" name="flightCode" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="ticketType" class="text-secondary font-weight-bold">Loại Ghế</label>
                        <select name="ticketType" class="selectpicker form-control" required>
                            <option value="Limousine">Limousine</option>
                            <option value="Ghe">Ghế</option>
                            <option value="Giuongnam">Giường nằm</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="guestTotal" class="text-secondary font-weight-bold">Số Lượng Ghế</label>
                        <input type="number" name="guestTotal" class="form-control" min="10" required />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="departure_date" class="text-secondary font-weight-bold">Ngày Đi</label>
                        <input type="date" name="departure_date" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="departure_time" class="text-secondary font-weight-bold">Thời Gian Đi</label>
                        <input type="time" name="departure_time" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="arrival_time" class="text-secondary font-weight-bold">Thời Gian Đến</label>
                        <input type="time" name="arrival_time" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="price" class="text-secondary font-weight-bold">Giá vé</label>
                        <input type="number" name="price" class="form-control" min="50000" max="5000000" required />
                    </div>
                    <div class="form-group">
                        <label for="status" class="text-secondary font-weight-bold">Hiển Thị</label>
                        <select name="status" class="selectpicker form-control" required>
                            <option value="1">Hiển Thị</option>
                            <option value="2">Ẩn</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <button class="btn btn-success btn-sm"><i class="far fa-save"></i> Lưu</button>
                    <a href="~/admin/Tickets" class="btn btn-danger btn-sm"><i class="far fa-window-close"></i> Hủy</a>
                </div>
            </div>
        }
    </div>
</section>


<style>
    .btn-orange {
        background-color: #FF6600;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-orange-light {
        background-color: #FFA366;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-orange-danger {
        background-color: #FF3300;
        border: none;
        padding: 0.5rem 1.2rem;
        border-radius: 5px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-gray {
        background-color: #cccccc;
        border: none;
        color: #555;
        padding: 0.5rem 1.2rem;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .btn:hover {
        opacity: 0.85;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .breadcrumb a {
        color: #FF6600;
        text-decoration: none;
    }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

    table {
        font-size: 14px;
        margin-top: 1rem;
    }

        table th {
            background-color: #FF6600;
            color: #fff;
            font-weight: bold;
        }

        table td {
            vertical-align: middle;
        }

        table tbody tr:hover {
            background-color: #f5f5f5;
        }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #FF6600;
    }

    .fas {
        font-size: 16px;
    }
</style>