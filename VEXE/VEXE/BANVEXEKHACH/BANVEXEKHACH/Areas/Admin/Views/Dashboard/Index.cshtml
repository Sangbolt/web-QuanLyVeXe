@{
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}

<div class="card card-title bg-white p-1 container">
    <div class="row">
        <div class="col-md-6 ">
            <h5 class="pl-2 mt-2 text-blues">Doanh thu | Công ty cổ phần xe khách Phương Trang</h5>
        </div>
    </div>
</div>

<section class="pt-2 container card">
    @Html.Partial("_MessgeAlert")
    <div class="bg-white p-4">
        <div class="row text-center mt-3">
            <!-- Tổng doanh thu dự tính -->
            <div class="col-4 col-sm-4 col-md-4 rounded p-3 shadow mb-3"
                 style="background-color: #FF8C42; height: 80px; display: flex; flex-direction: column; justify-content: center; margin: 10px;">
                <span style="color: #FFFFFF; font-weight: bold; font-size: medium;">Tổng doanh thu dự tính</span>
                <span style="color: #FFFFFF; font-size: x-large; margin-top: 5px;">@ViewBag.Revenue VND</span>
            </div>

            <!-- Tổng số tuyến xe đang hoạt động -->
            <div class="col-4 col-sm-4 col-md-4 rounded p-3 shadow mb-3"
                 style="background-color: #FF8C42; height: 80px; display: flex; flex-direction: column; justify-content: center; margin: 10px;">
                <span style="color: #FFFFFF; font-weight: bold; font-size: medium;">Tổng số tuyến xe đang hoạt động</span>
                <span style="color: #FFFFFF; font-size: x-large; margin-top: 5px;">@ViewBag.TotalRoutes tuyến</span>
            </div>

            <!-- Tổng số lượng vé đã đặt -->
            <div class="col-4 col-sm-4 col-md-4 rounded p-3 shadow mb-3"
                 style="background-color: #FF8C42; height: 80px; display: flex; flex-direction: column; justify-content: center; margin: 10px;">
                <span style="color: #FFFFFF; font-weight: bold; font-size: medium;">Tổng số lượng vé đã đặt</span>
                <span style="color: #FFFFFF; font-size: x-large; margin-top: 5px;">@ViewBag.TotalOrders vé</span>
            </div>

        </div>
    </div>
</section>

<script>$("#user").addClass("active");</script>

