@model IEnumerable<VEXE.Models.order>

@{
    ViewBag.Title = "Danh sách vé đã xóa";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}

<!-- Tiêu đề -->
<div class="card card-title bg-light p-3 shadow-sm mb-4">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h4 class="text-primary font-weight-bold mb-0">Danh sách vé đã xóa</h4>
        </div>
        <div class="col-md-6 text-right">
            <ol class="breadcrumb bg-light mb-0">
                <li class="breadcrumb-item">
                    <a href="~/Admin" class="text-primary">Trang chủ</a>
                </li>
                <li class="breadcrumb-item active">Vé đã xóa</li>
            </ol>
        </div>
    </div>
</div>

<!-- Nội dung chính -->
<section class="container-fluid">
    <div class="card bg-white p-4 shadow-sm">
        <!-- Nút hủy -->
        <div class="row justify-content-end mb-3">
            <div class="col-md-3 text-right">
                <a class="btn btn-danger btn-sm text-white" href="~/admin/Orders">Hủy</a>
            </div>
        </div>

        <!-- Bảng dữ liệu -->
        <div class="table-responsive">
            <table id="deletedBookingsTable" class="table table-striped table-bordered dt-responsive nowrap">
                <thead class="thead-dark">
                    <tr>
                        <th>Hành khách</th>
                        <th>Email</th>
                        <th>Ngày tạo</th>
                        <th>Số điện thoại</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.name</td>
                            <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.email)</td>
                            <td>@item.created_ate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @item.phone
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary mr-1" href="@Url.Action("Retrash", "Orders", new { id = item.ID })" title="Khôi phục">
                                    <i class="fas fa-undo"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-danger" href="@Url.Action("deleteTrash", "Orders", new { id = item.ID })" title="Xóa vĩnh viễn">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Không có dữ liệu hiển thị.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
