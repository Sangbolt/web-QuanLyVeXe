@model IEnumerable<VEXE.Models.post>

@{
    ViewBag.Title = "Thùng rác bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Thùng rác</h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Trang chủ</a></li>
                <li class="breadcrumb-item active m-0">Thùng rác</li>
            </ol>
        </div>
    </div>
</div>

<section class=" ">
    <div class=" bg-white card ">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1  float-right mr-1 ">
                    <a href="~/admin/post" class="btn btn-sm bg-danger text-white"><i class="far fa-window-close"></i> Hủy</a>
                </div>
            </div>
        </div>

        <div class="row" style="color: #FF6600">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">
                <table class="table px-3 table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th style="text-align:center">Mã bài viết</th>
                            <th style="text-align:center">Hình ảnh title</th>
                            <th style="text-align:center">Chủ đề bài viết</th>
                            <th style="text-align:center">Loại bài viết</th>
                            <th style="text-align:center">Ngày tạo</th>
                            <th style="text-align:center">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string title = item.title;
                            <tr>
                                <td class="text-cam">@Html.DisplayFor(modelItem => item.ID)</td>
                                <td><img width="150px" src="~/public/images/post/@Html.DisplayFor(modelItem => item.img)"></td>
                                <td>
                                    @if (title.Length > 50)
                                    {
                                        <a class=" font-weight-bold card-link " href="">@title.Substring(0, 50) ...</a>
                                    }
                                    else
                                    {
                                        <a class=" font-weight-bold card-link " href="">@title </a>
                                    }
                                </td>
                                <td width="15%" class="pt-4 ">  @Html.DisplayFor(modelItem => item.topid)</td>
                                <td style="font-size:15px;">@Html.DisplayFor(modelItem => item.created_at)</td>
                                <td>
                                    <a class="btn btn-sm btn-light text-dark border" href="@Url.Action("Retrash", "post", new { id = item.ID })"> <i class="fas fa-undo"></i></a>
                                    <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("deleteTrash", "post", new { id = item.ID })">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<script>
    $("#post").addClass("active");
</script>
