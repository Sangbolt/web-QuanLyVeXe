@{
    ViewBag.Title = "Kết quả thanh toán";
}

<h2>@ViewBag.Message</h2>

@if (ViewBag.Message.Contains("thành công"))
{
    <a href="@Url.Action("Success", "Checkout")" class="btn btn-primary">Quay về trang đặt vé</a>
}
else
{
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Quay về trang chủ</a>
}
