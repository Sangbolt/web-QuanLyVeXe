@using PagedList.Mvc;
@model VEXE.Models.ticket
@{
    ViewBag.Title = "Chi Tiết Vé";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
}

<section class="booking">
    <div class="container bg-white shadow-lg rounded-lg p-4" style="margin-top:50px; margin-bottom:50px">
        <div class="row">
            <div class="col-md-12">
                <div class="booking-confirmed booking-outer">
                    <div class="confirmation-title">
                        <div class="form-title form-title-1 text-center mb-4">
                            <h2 class="text-danger">Phương Trang | Chi tiết vé xe: @Model.city.cityName -> @Model.city1.cityName</h2>
                        </div>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="~/Home/Index">Trang Chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Chi tiết vé</li>
                            </ol>
                        </nav>

                        <form action="~/Checkout/Index" method="post">
                            <div class="payment-info detail">
                                <table class="table table-bordered table-hover" style="margin-top:20px;">
                                    <tbody>
                                        <tr>
                                            <td class="title">Giá</td>
                                            <td class="b-id text-danger">@Model.price.Value.ToString("N0") VND</td>
                                        </tr>
                                        <tr>
                                            <td class="title">Ngày Xuất Phát</td>
                                            <td>@Model.departure_date.Value.ToString("dd-MM-yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td class="title">Giờ Xuất Phát</td>
                                            <td>@Model.departure_time</td>
                                        </tr>
                                        <tr>
                                            <td class="title">Giờ Đến (Dự Kiến)</td>
                                            <td>@Model.arrival_time</td>
                                        </tr>
                                        <tr>
                                            <td class="title">Từ Ga</td>
                                            <td>@Model.city.cityName</td>
                                        </tr>
                                        <tr>
                                            <td class="title">Đến Ga</td>
                                            <td>@Model.city1.cityName</td>
                                        </tr>
                                        <tr>
                                            <td class="title">Mã Chuyến Xe</td>
                                            <td>@Model.flightCode</td>
                                        </tr>
                                        <tr>
                                            <td class="title">Ghế Trống</td>
                                            <td>@Model.guestTotal Ghế</td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="text-align:center">
                                                    <button class="btn btn-warning btn-block btn-lg" type="submit">Quay lại trang đặt vé</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .title {
        font-size: 18px;
        font-weight: bold;
        color: #d9534f;
    }

    .breadcrumb {
        background-color: #f8f9fa;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .breadcrumb-item a {
        color: #007bff;
    }

    .breadcrumb-item.active {
        color: #6c757d;
    }

    .btn {
        padding: 12px 24px;
        color: #fff;
        border-radius: 5px;
        text-align: center;
        font-size: 18px;
        font-weight: 600;
    }

    .btn-warning {
        background-color: #ff6a00;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e65c00;
        }

    .btn-block {
        width: 100%;
    }

    .table {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
        }

    .text-center {
        text-align: center;
    }

    h5.text-danger {
        font-size: 20px;
        font-weight: bold;
    }

    .container {
        max-width: 900px;
    }
</style>
